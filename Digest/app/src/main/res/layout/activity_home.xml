<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/land1"
    tools:context="com.bbb.digest.Home">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/audio2"
        android:id="@+id/stt"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/vtt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp" />
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/image2"
        android:id="@+id/ocr"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/stt"
        android:layout_alignStart="@+id/vtt" />
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/video2"
        android:id="@+id/vtt"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/digest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textSize="80dp"
        android:layout_marginTop="51dp"
        android:text="DIGEST" />


</RelativeLayout>
